<% provide(:title, t("title.signup")) %>
<h1><%= t("title.signup") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("form.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("form.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("form.pass") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("form.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("form.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
