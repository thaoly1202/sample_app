<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.user.size_ava_sm),
  micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t("text.micropost_t1")%><%= time_ago_in_words(micropost.created_at) %><%= t("text.micropost_t2")%>
    <% if current_user?(micropost.user) %>
      <%= link_to t("label.del"), micropost, method: :delete,
        data: {confirm: t("label.sure")} %>
    <% end %>
  </span>
</li>
