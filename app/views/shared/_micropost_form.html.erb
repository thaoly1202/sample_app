<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("label.compose") %>
  </div>
  <%= f.submit t("form.post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: Settings.img_rule %>
  </span>
<% end %>
<%= javascript_include_tag "micropost" %>
