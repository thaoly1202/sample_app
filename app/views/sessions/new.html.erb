<% provide(:title, t("label.login")) %>
<h1><%= t("label.login") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, t("form.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("form.password") %>
      <%= link_to t("label.forgot_pass"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, t("form.remember"), class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("text.remember") %></span>
      <% end %>

      <%= f.submit t("label.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t("text.newuser1") %> <%= link_to t("label.signupnow"), signup_path %></p>
  </div>
</div>
